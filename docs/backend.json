
{
  "entities": {
    "User": {
      "title": "User",
      "type": "object",
      "description": "Represents a user of the application.",
      "properties": {
        "email": {
          "type": "string",
          "description": "User's email address.",
          "format": "email"
        },
        "displayName": {
          "type": "string",
          "description": "User's display name."
        },
        "createdAt": {
          "type": "string",
          "description": "Timestamp of when the user account was created.",
          "format": "date-time"
        }
      },
      "required": [
        "email",
        "displayName",
        "createdAt"
      ]
    },
    "Player": {
      "title": "Player",
      "type": "object",
      "description": "Represents a player available for auction.",
      "properties": {
        "playerName": {
          "type": "string",
          "description": "Full name of the player."
        },
        "playerNumber": {
          "type": "number",
          "description": "The number assigned to the player."
        },
        "userId": {
          "type": "string",
          "description": "The ID of the user who created this player."
        },
        "firstName": {
          "type": "string",
          "description": "Player's first name."
        },
        "surname": {
          "type": "string",
          "description": "Player's surname."
        },
        "country": {
          "type": "string",
          "description": "Player's country of origin."
        },
        "specialism": {
          "type": "string",
          "description": "Player's primary skill (e.g., Batter, Bowler)."
        },
        "cua": {
          "type": "string",
          "description": "Player's status (Capped/Uncapped/Associate)."
        },
        "reservePrice": {
          "type": "number",
          "description": "The minimum bid price for the player in Lakhs."
        },
        "points": {
          "type": "number",
          "description": "Points associated with the player for team composition."
        }
      },
      "required": [
        "playerName",
        "playerNumber",
        "userId",
        "firstName"
      ]
    },
    "Set": {
      "title": "Set",
      "type": "object",
      "description": "Represents a set of players for an auction.",
      "properties": {
        "name": {
          "type": "string",
          "description": "Name of the set."
        },
        "players": {
          "type": "array",
          "description": "An array of player objects included in the set.",
          "items": {
            "$ref": "#/entities/Player"
          }
        },
        "userId": {
          "type": "string",
          "description": "The ID of the user who created this set."
        },
        "order": {
            "type": "number",
            "description": "The display order for the set on the homepage."
        }
      },
      "required": [
        "name",
        "players",
        "userId"
      ]
    }
  },
  "auth": {
    "providers": [
      "password"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "User",
          "schema": {
            "$ref": "#/entities/User"
          },
          "description": "Stores public profile information for each user."
        }
      },
      {
        "path": "/players/{playerId}",
        "definition": {
          "entityName": "Player",
          "schema": {
            "$ref": "#/entities/Player"
          },
          "description": "Stores the master list of all players created by users."
        }
      },
      {
        "path": "/sets/{setId}",
        "definition": {
          "entityName": "Set",
          "schema": {
            "$ref": "#/entities/Set"
          },
          "description": "Stores auction sets created by users, containing an array of players."
        }
      }
    ]
  }
}

    